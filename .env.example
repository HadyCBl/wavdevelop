# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
APP_NAME="Microsystem+"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080

# ========================================
# MODO MANTENIMIENTO
# ========================================
# Activar mantenimiento: true | false
APP_MAINTENANCE=false

# IPs permitidas durante mantenimiento (separadas por comas)
# Ejemplo: 127.0.0.1,192.168.1.100,::1
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ========================================
# BASE DE DATOS PRINCIPAL
# ========================================
DB_HOST=db
DB_PORT=3306
DB_DATABASE=www_main
DB_USERNAME=www_user
DB_PASSWORD=www_password

# ========================================
# BASE DE DATOS ANALYTICS
# ========================================
DB_ANALYTICS_HOST=db
DB_ANALYTICS_PORT=3306
DB_ANALYTICS_DATABASE=www_analytics
DB_ANALYTICS_USERNAME=www_user
DB_ANALYTICS_PASSWORD=www_password

# ========================================
# CONFIGURACIÓN DE SESIONES
# ========================================
SESSION_LIFETIME=120
SESSION_DRIVER=file

# ========================================
# LOGS Y ERRORES
# ========================================
LOG_CHANNEL=single
LOG_LEVEL=error

# ========================================
# AUDITORÍA DE USUARIOS (MongoDB)
# ========================================
# Activar registro de acciones: true | false
USER_ACTIVITY_LOG_ENABLED=false

# Configuración MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=user_activities
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# Nombre de la colección para actividades
MONGODB_COLLECTION=activities

# ========================================
# ALMACENAMIENTO DE ARCHIVOS
# ========================================
# Ruta base para almacenamiento de archivos
# Docker: /var/www/html/storage/uploads (dentro del proyecto)
# Directo: dejar vacío para usar ruta relativa automática
STORAGE_PATH=/var/www/html/storage/uploads
